{
    "compilerOptions": {
        // Type Checking
        "strict": true,
        // Modules
        "module": "commonjs",
        "rootDir": "src",
        // Emit
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "sourceMap": true,
        // Interop Constraints
        "esModuleInterop": true,
        // Language and Environment
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES6"
    },
    "include": [
        "src"
    ]
}
